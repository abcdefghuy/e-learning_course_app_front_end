<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvScore"
        android:text="Your Score\n29/30"
        android:textSize="24sp"
        android:textColor="#3A5BA0"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/circle_light_background"
        android:padding="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCongrat"
        android:text="Congratulation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3A5BA0"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMessage"
        android:text="Great job! You Did It"
        android:textSize="16sp"
        android:textColor="#3A5BA0"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDialogAction"
        android:text="Back to Lesson"
        android:backgroundTint="#3A5BA0"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout> 