<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Thumbnail Shimmer -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerThumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Title Shimmer -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerTitle"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerThumbnail">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Instructor Avatar Shimmer -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerAvatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerTitle">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Instructor Name Shimmer -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerInstructor"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/shimmerAvatar"
        app:layout_constraintStart_toEndOf="@id/shimmerAvatar"
        app:layout_constraintTop_toTopOf="@id/shimmerAvatar">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Price Shimmer -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPrice"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerAvatar">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 