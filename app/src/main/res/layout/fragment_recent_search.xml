<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Recent Search Section -->
    <TextView
        android:id="@+id/tvRecentSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Search"
        android:textColor="#1B1B1B"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Recent Search List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentSearchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecentSearchTitle" />
    <!-- Recent View Section -->
    <TextView
        android:id="@+id/tvRecentViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent View"
        android:textColor="#1B1B1B"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recentSearchList" />

    <!-- Recent View List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecentViewTitle"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>