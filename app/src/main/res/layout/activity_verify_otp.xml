<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.e_learningcourse.ui.auth.verifyOtp.VerifyOtpViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#F5F9FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:layout_marginBottom="20dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verrify Account"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/emailInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP code has been sent to l*****h@gmail.com"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resendContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/tv_resend_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP code in "/>

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="59s"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Resend OTP"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Verify"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
